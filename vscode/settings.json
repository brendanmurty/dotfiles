{
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "workbench.startupEditor": "newUntitledFile",
    "editor.fontFamily": "'Fira Code', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 18,
    "workbench.colorTheme": "Horizon Bold",
    "workbench.iconTheme": "material-icon-theme",
    "files.eol": "\n",
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "editor.defaultFormatter": "vscode.markdown-language-features",
    "editor.folding": false,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "editor.quickSuggestionsDelay": 300,
    "debug.console.fontSize": 18,
    "markdown.preview.fontSize": 18,
    "terminal.integrated.fontSize": 18,
    "workbench.fontAliasing": "antialiased",
    "markdown.preview.fontFamily": "'Fira Code', monospace",
    "editor.tokenColorCustomizations": {
        "comments": "#666",
        "textMateRules": [
            {
                "scope": [
                   "comment"
                ],
                "settings": {
                    "fontStyle": ""
                }
            }
        ]
    },
    "editor.minimap.enabled": false,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.colorCustomizations": {
        "activityBar.activeBorder": "#23c5b0",
        "activityBar.foreground": "#23c5b0",
        "activityBar.inactiveForeground": "#777",
        "activityBarBadge.background": "#23c5b0",
        "activityBarBadge.foreground": "#000",
        "contrastBorder": "#333",
        "editor.background": "#000",
        "sideBar.background": "#000",
        "sideBar.foreground": "#FFF",
        "sideBarSectionHeader.background": "#000",
        "sideBarSectionHeader.foreground": "#23c5b0",
        "tab.activeBorder": "#23c5b0"
    },
    "window.zoomLevel": 1,
    "window.menuBarVisibility": "toggle",
    "search.location": "panel",
    "workbench.list.openMode": "doubleClick",
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.defaultDateFormat": " h:mma D MMM YY",
    "gitlens.defaultDateShortFormat": "D MMM YY",
    "javascript.validate.enable": false,
    "php.validate.enable": false
}
